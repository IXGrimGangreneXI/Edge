#!/bin/bash
function start() {
	libs=$(find libs/ -name '*.jar' -exec echo -n :{} \;)
	libs=$libs:$(find . -maxdepth 1 -name '*.jar' -exec echo -n :{} \;)
	libs=${libs:1}
	
	java -cp "$libs" org.asf.edge.commonapi.EdgeCommonApiServerMain "$@"
	code=$?
	if [ "$code" == "237" ]; then
		start
		return
	fi
	if [ "$code" == "0" ] && [ -f updater.jar ]; then
		java -cp "updater.jar" org.asf.edge.commonapi.EdgeCommonApiServerUpdater --update
		rm updater.jar
		echo
		start
		return
	fi
	exit $code
}

start
